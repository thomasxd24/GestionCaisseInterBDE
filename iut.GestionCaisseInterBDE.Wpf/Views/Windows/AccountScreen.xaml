<mah:MetroWindow x:Class="iut.GestionCaisseInterBDE.Wpf.Views.AccountScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:iut.GestionCaisseInterBDE.Wpf.Views"
      xmlns:uc="clr-namespace:iut.GestionCaisseInterBDE.Wpf.Views.UserControls"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AccountScreen">

    <mah:MetroTabControl DockPanel.Dock="Top" Margin="0,10,0,0" x:Name="mainTab" TabStripPlacement="Left">
        <TabItem x:Name="homeTab" Header="Comptes">
            <uc:UserAccounts></uc:UserAccounts>
        </TabItem>
        <TabItem x:Name="caisseTab" Header="BDE">
            <uc:BDEAccounts></uc:BDEAccounts>
        </TabItem>

    </mah:MetroTabControl>
</mah:MetroWindow>
